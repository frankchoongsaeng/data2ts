{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "lib": ["es6"],

        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,

        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
